{
  "name": "course_schedule_system",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "format": "eslint . --fix && pnpm prettier --write . && stylelint '**/*.{css,scss,vue}' --fix",
    "lint:staged": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,ts,jsx,tsx,vue}": [
      "eslint --fix"
    ],
    "**/*.{js,mjs,cjs,ts,jsx,tsx,vue,html,json,css,scss,md}": [
      "prettier --write"
    ],
    "**/*.{css,scss,vue}": [
      "stylelint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/node": "^18.19.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "eslint": "^9.10.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0",
    "eslint-plugin-vue": "^9.21.1",
    "vue-eslint-parser": "^9.3.2",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.11.0",
    "@typescript-eslint/parser": "^8.10.0",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-config-prettier": "^9.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "postcss-html": "^1.6.0",
    "jiti": "^2.6.1"
  }
}
