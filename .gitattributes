# Export-ignore files for archives
/.github export-ignore
/.vscode export-ignore
/.idea export-ignore
/tests export-ignore
/tooling export-ignore
/docs export-ignore

# Line endings
*.sh eol=lf
*.bat eol=crlf
*.cmd eol=crlf

# Diff settings
*.md diff=markdown
*.json diff=json
*.yml diff=yaml
*.yaml diff=yaml

# Merge strategies
package.json merge=union
pnpm-lock.yaml merge=union
*.lock merge=union

# Custom attributes for specific files
README.md linguist-documentation=true
LICENSE linguist-documentation=true
CHANGELOG.md linguist-documentation=true
CONTRIBUTING.md linguist-documentation=true

# Monorepo specific
apps/*/dist/ export-ignore
packages/*/dist/ export-ignore
*.tsbuildinfo export-ignore

# Build artifacts should not be tracked
*.d.ts linguist-generated=true
*.js.map linguist-generated=true
*.css.map linguist-generated=true